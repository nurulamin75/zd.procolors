{
  "name": "procolors",
  "version": "1.0.0",
  "description": "ProColors Figma plugin for harmonious color systems",
  "main": "dist/code.js",
  "scripts": {
    "build-ui": "vite build",
    "build-code": "esbuild src/code/main.ts --bundle --outfile=dist/code.js --minify --target=es6",
    "build": "npm run build-ui && npm run build-code",
    "dev": "npm run build -- --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chroma-js": "^2.4.2",
    "lucide-react": "^0.555.0",
    "react": "^18.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.84.0",
    "@types/chroma-js": "^2.4.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "esbuild": "^0.27.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-singlefile": "^2.0.1"
  }
}
